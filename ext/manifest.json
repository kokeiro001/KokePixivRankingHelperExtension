{
     "manifest_version": 2,
     "name": "KokePixivRankingHelper",
     "version": "0.1",
     "content_scripts" : [
       {
         "matches" : ["http://www.pixiv.net/ranking.php*"],
         "js" : ["jquery-1.12.0.js", "myscript.js"]
       }
     ],
     "browser_action": {
          "default_popup": "popup.html",
          "default_icon": "19px.png",
          "default_title": "Pixivのランキング情報を書き換えるよ"
     }
}
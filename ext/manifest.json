{
     "manifest_version": 2,
     "name": "PixivRankingHelper",
     "version": "1.1",
     "content_scripts" : [
       {
         "matches" : ["http://www.pixiv.net/*"],
         "js" : ["jquery-1.12.0.js", "myscript.js"]
       }
     ],
     "browser_action": {
          "default_popup": "popup.html",
          "default_icon": "19px.png",
          "default_title": "Hello Worldを表示するよ"
     }
}